{
  "apphosting": [
    {
      "backendId": "backstage-backend",
      "rootDir": "./",
      "ignore": [
        "node_modules",
        ".git", 
        "firebase-debug.log",
        "firebase-debug.*.log",
        "packages/app/dist"
      ]
    }
  ],
  "hosting": [
    {
      "target": "staging",
      "public": "packages/app/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production",
      "public": "packages/app/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}